<MenuBar>
	<Menu name="Keane">
		<Menu name="About Keane" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Keane" shell="win -c"/>
	</Menu>
	<Menu name="File">
		<Menu name="New"/>
		<Menu name="Open&#8230;"/>
		<Menu type="divider"/>
		<Menu name="Close"/>
		<Menu name="Close All"/>
		<Menu name="Save"/>
		<Menu name="Save As&#8230;"/>
		<Menu type="divider"/>
		<Menu name="Export"/>
	</Menu>
	<Menu name="Edit">
		<Menu name="Cut"/>
		<Menu name="Copy"/>
		<Menu name="Paste"/>
		<Menu name="Clear"/>
	</Menu>
	<Menu name="Image">
		<Menu name="Mode">
			<Menu name="Grayscale" click="filter-render" arg="grayscale"/>
		</Menu>
		<Menu name="Adjustments">
			<Menu name="Brighten" click="filter-render" arg="brightness,50"/>
			<Menu name="Threshold" click="filter-render" arg="threshold,50"/>
		</Menu>
	</Menu>
	<Menu name="Layer"></Menu>
	<Menu name="Type"></Menu>
	<Menu name="Select"></Menu>
	<Menu name="Filter">
		<Menu name="Last Filter" disabled="1" />
		<Menu type="divider"/>
		<Menu name="Sobel" click="filter-render" arg="sobel"/>
		<Menu type="divider"/>
		<Menu name="Blur">
			<Menu name="Blur" click="filter-render" arg="blur"/>
		</Menu>
		<Menu name="Disort" />
		<Menu name="Noise" />
		<Menu name="Pixelate" />
		<Menu name="Render">
			<Menu name="Clouds" click="filter-render" arg="clouds"/>
		</Menu>
		<Menu name="Sharpen">
			<Menu name="Sharpen" click="filter-render" arg="sharpen"/>
		</Menu>
		<Menu name="Stylize" />
		<Menu name="Other" />
	</Menu>
	<Menu name="View">
		<Menu name="Rulers" click="toggle-rulers" check-group="toggle-rulers" is-checked="1" hotkey="alt+r" />
		<Menu name="Status Bar" click="toggle-statusbar" check-group="toggle-statusbar" />
	</Menu>
	<Menu name="Window">
		<Menu name="Navigator" check-group="sidebar-top" is-checked="1"/>
		<Menu name="Color" check-group="sidebar-top"/>
		<Menu name="Info" check-group="sidebar-top"/>
		<Menu name="Character" check-group="sidebar-middle" is-checked="1"/>
		<Menu name="Paragraph" check-group="sidebar-middle"/>
		<Menu name="Swatches" check-group="sidebar-middle"/>
		<Menu name="Layers" check-group="sidebar-bottom" is-checked="1"/>
		<Menu name="Channels" check-group="sidebar-bottom"/>
		<Menu name="Paths" check-group="sidebar-bottom"/>
		<Menu type="divider"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="Source Code"/>
	</Menu>
</MenuBar>